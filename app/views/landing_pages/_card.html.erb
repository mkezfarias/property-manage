
   <div class="card rounded" style="width: 18rem;">
     <%= link_to @latest.kind_of_property, property_path(@latest), class: "ubuntu text-center card-link bg-blueish text-white h7" %>
     <a href="<%=property_path(@latest)%>" class="linkk" >
     <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
       <div class="carousel-inner">
         <div class="carousel-item active">
           <img src="<%=@latest.pictures.split().first %>" class="d-block w-100" alt="...">
         </div>
         <% @latest.pictures.split().each do |picture| %>
           <div class="carousel-item">
             <img src="<%=picture%>" class="d-block w-100" alt="...">
           </div>
         <% end %>
       </div>
       </a>
       
       <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
       </a>
       <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
       </a>
       <span class="bg-blueish text-light p-1 price"> <%= number_to_currency(@latest.price, strip_insignificant_zeros: true) %> MXN </span>
     </div>
     <div class="card-body">
       <a href="<%=property_path(@latest)%>" ><h5 class="card-title h6"><%= @latest.title %></h5></a>
       <p class="card-text card-txt-format h7"><%= @latest.description[0..105] %>... <%= link_to "Ver mas", property_path(@latest) %></p>
     </div>
     <ul class="list-group list-group-flush">
      <li class="list-group-item h7 text-center"><%= @latest.address %></li>
      <li class="list-group-item d-flex justify-content-around h7">
        <span>Rooms: <%= @latest.rooms %> </span> 
        <span>Bathrooms: <%= @latest.bathrooms %> </span> 
        <span>Size: <%= @latest.size %> m2 </span>
      </li>
     </ul>
     <div class="card-body text-center">
       <a href="#" class="h7 card-link"> Mark as Favorite </a>
       <a href="#" class="h7 card-link"> Hide listing </a>
     </div>
   </div>